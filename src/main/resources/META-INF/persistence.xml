<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="default" transaction-type="JTA">
        <jta-data-source>jdbc/banking</jta-data-source>
        <class>com.banking.ejb.AccountServiceBean</class> <!-- Add your entity class if any -->
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/banking"/>
            <property name="jakarta.persistence.jdbc.user" value="daniel"/>
            <property name="jakarta.persistence.jdbc.password" value="s3cret"/>
        </properties>
    </persistence-unit>
</persistence>
